<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MovieDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/dtlMovieImageID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@android:color/background_dark" />

            <TextView
                android:id="@+id/dtlMovieTitleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/dtlMovieImageID"
                android:paddingLeft="5dp"
                android:text=" Movie Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dtlMovieReleaseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dtlMovieTitleID"
                android:layout_toRightOf="@id/dtlMovieImageID"
                android:padding="5dp"
                android:text="Released" />

            <TextView
                android:id="@+id/dtlMovieCategoryID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dtlMovieReleaseID"
                android:layout_toRightOf="@id/dtlMovieImageID"
                android:padding="5dp"
                android:text="Category" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dtlMovieImageID">
            <TextView
                android:id="@+id/dtlDirectorID"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="Directed by:"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/dtlActorsID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actors: "
                android:padding="5dp"/>
            <TextView
                android:id="@+id/dtlWriters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Writers : "
                android:padding="5dp"/>
            <TextView
                android:id="@+id/dtlPlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot : "
                android:padding="5dp"/>
            <TextView
                android:id="@+id/dtlBoxOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box Office : "
                android:padding="5dp"/>

        </LinearLayout>

    </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>